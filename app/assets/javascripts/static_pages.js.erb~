
function loaddata(url)
{
      $.ajax({
      type : 'POST',
      url : url,
      dataType: 'html',
      success : function(data) { $('#companies').html(data); },
      error: function(XMLHttpRequest, testStatus, errorThrown) {
      }
    });
    
}
function load1()
{
      $.ajax({
      type : 'GET',
      url : '/login',
      dataType: 'html',
      success : function(data) { $('#main').html(data); },
      error: function(XMLHttpRequest, testStatus, errorThrown) {
      }
    });
    
}

function load2()
{
      $.ajax({
      type : 'GET',
      url : '/register',
      dataType: 'html',
      success : function(data) { $('#main').html(data); },
      error: function(XMLHttpRequest, testStatus, errorThrown) {
      }
    });
    
}
function load()
  {
     if ($('#company_name').val() == "")
	{
	  url = '/companies/search';
	//  $('#add_button').hide();
	}
     else
	{
  	  value = $('#company_name').val();
  	  url = '/companies/search/' + value;
	}
  loaddata(url);

  } 



function load_old() {
  element = document.getElementById('search');
  value = element.value;
  value = value.replace(' ','%20');
  value = value.replace('.','%2E');
  $('#companies').load("/companies/search/"+value);
  //$('#companies').load("/Test");

}
