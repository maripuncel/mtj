
function loaddata(url)
{
      $.ajax({
      type : 'POST',
      url : url,
      dataType: 'html',
      success : function(data) { $('#companies').html(data); },
      error: function(XMLHttpRequest, testStatus, errorThrown) {
      }
    });
    
}
function loaduser(type)
{
     if( type == "login")
     {
       url = '/login'; 
     }
     else
     {
       url = '/register';
     }
      $.ajax({
      type : 'GET',
      url : url,
      dataType: 'html',
      success : function(data) { $('#main').html(data); },
      error: function(XMLHttpRequest, testStatus, errorThrown) {
      }
    });
    
}

function load()
  {
     if ($('#company_name').val() == "")
	{
	  url = '/companies/search';
	  $('#add_button').hide();
	}
     else
	{
  	  value = $('#company_name').val();
  	  url = '/companies/search/' + value;
	}
  loaddata(url);

  } 

