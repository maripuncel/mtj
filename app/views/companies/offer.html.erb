<% provide(:title, @company.name + " | Offers") %>

<div class="container offer">
  <div class="row title">
    <p id="notice"><%= notice %></p>
    <h1 id="company-name"><%= @company.name %> Offers</h1>
  </div>

  <hr class="company-divider">

<table>
  <tr>
    <th>Figure</th>
    <th></th>
    <th></th>
  </tr>

  <% if @offers.any? %>
      <% @offers.each do |offer| %>
          <tr>
            <td><%= offer.figure %></td>
            <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
            <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
  <% end %>
</table>

<br />
  <hr class="company-divider">
<%= link_to 'New Offer', new_offer_path %> |
<%= link_to 'Back to ' + @company.name, company_url %>
</div>